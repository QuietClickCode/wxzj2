<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
		namespace：必须与对应的接口全类名一致
		id:必须与对应接口的某个对应的方法名一致
	 -->
<mapper namespace="com.yaltec.wxzj2.biz.draw.dao.CodeNameDao">


   
	<!-- 批量销户获取房屋编号（根据楼宇编号） -->
	<select id="getH001ForApplyLogoutB" resultType="com.yaltec.wxzj2.biz.draw.entity.CodeName">
		<![CDATA[
			select h001 as bm,h002 as mc from house  where h035='正常' and lybh=#{lybh} order by h001
		]]>
	</select>
	
	<!-- 批量销户获取房屋编号（根据小区编号） -->
	<select id="getH001ForApplyLogoutN" resultType="com.yaltec.wxzj2.biz.draw.entity.CodeName">
		<![CDATA[
			select h001 as bm,h002 as mc from house  where h035='正常' and 
			lybh in (select lybh from sordinebuilding where xqbh=#{xqbh}) order by h001
		]]>
	</select>
	
</mapper>